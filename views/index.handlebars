<div class="container mt-5">

    <h1 class="mb-5 text-center">Eat a burger!</h1>
  <div class="row">
    <div class="col-6">

      <h3 class="mb-3 text-center">Burgers that are not devoured!</h3>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h3 class="mb-3 text-center">Burgers that are devoured!</h3>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <form class="col-12 text-center create-form">
      <h4 class="mt-5">Add a burger</h4>

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" class="form-control" id="ca" name="burger_name">
      </div>

      <div class="form-group">
        <label for="devoured"></label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> Not eaten ... yet
      </div>

      <button class="btn btn-secondary" type="submit" id="submit">Add burger</button>
    </form>
  </div>
</div>